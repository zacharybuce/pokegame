{
    "compilerOptions": {
        "lib": ["es2019"],
        "noEmit": true,
        "target": "esnext",
        "module": "commonjs",
        "moduleResolution": "node",
        "strict": true,
        "allowJs": true,
        "checkJs": true,
        "incremental": true,
        "allowUnreachableCode": false
    },
    "types": ["node"],
    "exclude": [
        "./.*-dist/**/*",
    ],
    "include": [
        "./config/*.ts",
        "./data/*",
        "./data/text/*",
        "./data/mods/*/*",
        "./dev-tools/*.ts",
        "./lib/*.ts",
        "./server/**/*.ts",
        "./sim/**/*",
        "./tools/set-import/*.ts",
        "./tools/modlog/*.ts",
        "./translations/**/*.ts",
    ]
}
